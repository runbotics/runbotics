<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="pilakw" id="20240412127832">
        <createTable tableName="secret">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true"/>
            </column>
            <column name="tenant_id" type="${uuid_type}">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_tenant_id"
                    references="tenant(id)"
                />
            </column>
            <column name="data" type="text"/>
            <column name="iv" type="text">
                <constraints unique="true"/>
            </column>
        </createTable>

        <createTable tableName="process_context">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true"/>
            </column>
            <column name="tenant_id" type="${uuid_type}">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_tenant_id"
                    references="tenant(id)"
                />
            </column>
            <column name="process_id" type="bigint">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_process_id"
                    references="process(id)"
                />
            </column>
        </createTable>

        <createTable tableName="process_context_secret">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints primaryKey="true"/>
            </column>
            <column name="tenant_id" type="${uuid_type}">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_tenant_id"
                    references="tenant(id)"
                />
            </column>
            <column name="process_context_id" type="${uuid_type}">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_process_context_id"
                    references="process_context(id)"
                />
            </column>
            <column name="name" type="text"/>
            <column name="secret_id" type="${uuid_type}">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_secret_id"
                    references="secret(id)"
                />
            </column>
            <column name="order" type="int" />
        </createTable>
    </changeSet>
</databaseChangeLog>
