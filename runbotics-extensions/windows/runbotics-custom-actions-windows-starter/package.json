{
    "name": "runbotics-custom-actions-starter",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "type": "commonjs",
    "main": "dist/index.js",
    "module": "./dist/index.js",
    "source": "src/index.ts",
    "exports": {
        ".": "./dist/index.js",
        "./CustomAutomation": "./dist/CustomAutomation.js"
    },
    "scripts": {
        "build": "microbundle src/**/*.ts --no-compress --format cjs",
        "start": "microbundle watch src/**/*.ts --no-compress --format cjs",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "@nestjs/common": "^7.6.15",
        "@runbotics/runbotics-sdk": "1.2.1",
        "@runbotics/winax": "^3.5.3",
        "lodash": "4.17.21",
        "microbundle": "0.13.3",
        "tslib": "2.3.0",
        "typescript": "3.9.9"
    },
    "dependencies": {
        "electron-builder": "22.11.7"
    },
    "peerDependencies": {
        "@nestjs/common": "^7.6.15",
        "@runbotics/runbotics-sdk": "1.2.1",
        "@runbotics/winax": "^3.5.3",
        "axios": "0.21.1"
    },
    "optionalDependencies": {
        "@runbotics/winax": "^3.5.3"
    },
    "files": [
        "dist"
    ],
    "build": {
        "productName": "RunBotics",
        "electronVersion": "23.3.13",
        "appId": "com.runbotics.runbotics-desktop",
        "mac": {
            "category": "utility"
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/",
            "node_modules/",
            "package.json",
            "driver"
        ],
        "extraFiles": [
            ".env",
            "driver/"
        ],
        "linux": {
            "target": "deb"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "runAfterFinish": false
        }
    }
}
