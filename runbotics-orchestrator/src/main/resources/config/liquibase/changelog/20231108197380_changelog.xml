<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="depcikm" id="20231108197380-1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="jhi_user_bot"/>
            </not>
        </preConditions>
        <createTable tableName="jhi_user_bot">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="bot_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="subscribed_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="depcikm" id="20231108197380-2">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="jhi_user_bot"/>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_user_id_jhi_user_bot"/>
                <foreignKeyConstraintExists foreignKeyName="fk_bot_id_jhi_user_bot"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="jhi_user_bot"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_id_jhi_user_process"
                                 referencedTableName="jhi_user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="jhi_user_bot"
                                 baseColumnNames="bot_id"
                                 constraintName="fk_bot_id_jhi_user_bot"
                                 referencedTableName="bot"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
